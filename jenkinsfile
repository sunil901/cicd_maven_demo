pipeline {
  agent any
  stages {
    stage ("2.Copy the project files") {
      steps {
        sh "mvn clean install"    
      }
    }
    stage ("3. Build the project") {
      steps {
        sh "cp -R /var/lib/jenkins/workspace/cicd_demo/target/* /home/ubuntu/docker/"
      }
    }
    
    stage ("4. Build the docker image") {
        steps {
            sh "docker build -t maven_image /home/ubuntu/docker"
        }
    }
  }
}
